{% extends 'base.html.twig' %}

{% block title %} Categoria - {{Categorias.nomeCategoria}} {% endblock %}

{% block body %}

<div class="album py-5 bg-light">
    <div class="container">

      <div class="row">

        {% if Categorias.produtos|length > 0 %}
            {% for produto in Categorias.produtos %}
    
            
                <div class="col-md-4">
                <div class="card mb-4 shadow-sm">

                <img src="{{produto.imagem}}" alt="..." class="img-thumbnail">
                
                    <div class="card-body">
                    <p class="card-text">{{produto.nome}}</p>
                    <div class="d-flex justify-content-between align-items-center">
                    
                        <a href="{{ path('Detalhes_Produto',{'id':produto.id})}}" class="btn btn-lg btn-block btn-primary">Saiba Mais...</a>
                        
                        
                    </div>
                    </div>
                </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="text-center">
                <h3 class="text-center"  style="margin-bottom: 6.5rem;margin-top: 40px;" >
                    NÃ£o Existe produto Nessa Categoria : (
                </h3>
              
            </div>

        {% endif %}



      </div>
    </div>
</div>
{% endblock %}
